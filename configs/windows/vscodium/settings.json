{
  // basics
  "editor.fontFamily": "'office code pro', monofoki, hasklig, source code pro, consolas, hack, meslo lg s, mono",
  "editor.fontSize": 11,
  "workbench.colorTheme": "Aura Dark (Soft Text)",

  "editor.padding.top": 30,

  "editor.indentSize": "tabSize",
  //"editor.tabSize": 2, // vs 4
  "editor.insertSpaces": true, // "this setting is overridden based on the file contents when #editor.detectIndentation# is on."

  "editor.wordWrap": "on",
  //"editor.acceptSuggestionOnEnter": "off",

  "files.insertFinalNewline": true,
  // "files.trimFinalNewlines": false, // false is default
  "files.trimTrailingWhitespace": true,



  // sane defaults
  // remove auto-suggestions for words elsewhere in the document(s)
  "editor.wordBasedSuggestions": "off",

  //"editor.formatOnSave": true, // annoying for other files/formatters, best to do it for each lang



  // some personal preferences
  "editor.foldingImportsByDefault": true,



  // langs and lang extensions
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },

  "[elixir]": {
    //"editor.formatOnSave": true
  },

  "[HTML (Eex)]": {
    //"editor.formatOnSave": true,
    //"editor.tabSize": 2
  },

  "[wren]":{
    "editor.tabSize": 2
  },


  // ruby
  // NOTE: this is a mess!
  // outdated: https://code.visualstudio.com/docs/languages/ruby

  // choose lsp: ruby (extension) or solargraph or ruby LSP (by shopify)

  // solargraph extension enables most things by default, so there isn't much to set
  //"solargraph.diagnostics": true, // seems core
  //"solargraph.formatting": true, // replaces ruby.format, experimental, kinda jank
  //"solargraph.autoformat": true, // replaces editor.formatOnType

  //"ruby.useBundler": true,
  //"ruby.lint": {
    //"rubocop": true,
    //"ruby": true, //Runs ruby -wc
    // other lintersk
  //},
  //"ruby.lintDebounceTime": 500,
  //"ruby.format": "rubocop", // "rubocop", "standard", "rufo", "rubyfmt", "prettier"

  "[ruby]": {
    // https://code.visualstudio.com/docs/languages/ruby
    //  - setup ruby dev env

    //"editor.formatOnSave": true, // otherwise run it manually: ctrl+shift+l
    //"editor.formatOnSaveMode": "modificationsIfAvailable",
    //"editor.formatOnSaveTimeout": 2500,
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    //"editor.formatOnType": true, // format by line // TODO: TESTING
    "editor.formatOnPaste": true,
    // "editor.rulers": [
    //   120
    // ],
    "editor.semanticHighlighting.enabled": true,
  },

  // shopify's ruby lsp extension
  // https://marketplace.visualstudio.com/ite ms?itemName=Shopify.ruby-lsp

  // https://github.com/Shopify/vscode-ruby-lsp/blob/main/TROUBLESHOOTING.md
  //  - troubleshooting
  // try running 'codium' via terminal
  //  - otherwise, not sure how it would get powershell env vars..
  "rubyLsp.rubyExecutablePath": "C:\\Users\\ra\\scoop\\apps\\ruby\\current\\bin\\ruby.exe", // TODO: using \ over / was a terrible idea
  "rubyLsp.rubyVersionManager": {
    "identifier": "none"
  },

  // generated by extension upon clicking edit settings
  "rubyLsp.enabledFeatures": {
    "codeActions": true,
    "diagnostics": true,
    "documentHighlights": true,
    "documentLink": true,
    "documentSymbols": true,
    "foldingRanges": true,
    "formatting": true,
    "hover": true,
    "inlayHint": true,
    "onTypeFormatting": true,
    "selectionRanges": true,
    "semanticHighlighting": true,
    "completion": true,
    "codeLens": true,
    "definition": true,
    "workspaceSymbol": true
  },


}
